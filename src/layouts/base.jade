//- Mixin for post, used on homepage and post page
mixin postHead(post)
  .post-head.group
    a(href="#{data.baseUrl}#{post.url}")
      h1.post-title= post.title
    span.post-date!= 'Published ' + post.date.toLocaleDateString().split(',').slice(1).join(',')

mixin post(post)
  mixin postHead(post)
  .post-body!= post.content

doctype 5
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="icon", type="image/png", href="#{data.baseUrl}images/ebeeson.png")
    link(href="#{data.baseUrl}styles/main.css", rel="stylesheet")
    block head
      title= "notes"
  body
    .center
      nav.group
        h1.name
          a(href="#{data.baseUrl}") notes
        ul.nav-links
          li.text-link: a(href="https://github.com/ebeeson") projects
      block content
      .footer My name is Erik. Frequently, I have ideas; occasionally, they're worthwhile.